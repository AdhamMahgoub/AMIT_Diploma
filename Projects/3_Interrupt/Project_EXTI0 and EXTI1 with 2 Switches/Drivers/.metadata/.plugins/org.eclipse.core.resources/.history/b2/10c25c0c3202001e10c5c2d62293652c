#ifndef				EXTI_CONFIG_H
#define				EXTI_CONFIG_H


/********************************************************************************************/
/**			Sense Mode can be : 															*/
/**								1-	EXTI_FALLING											*/
/*								2-	EXTI_RISING												*/
/*                              3-	EXTI_IOC                                                */
/*                              4-	EXTI_LOW_LEVEL                                          */
/********************************************************************************************/

#define EXTI_Falling 	0
