#ifndef				EXTI_CONFIG_H
#define				EXTI_CONFIG_H


/********************************************************************************************/
/**			Sense Mode can be : 															*/
/**								1-	EXTI_FALLING											*/
/*								2-	EXTI_RISING												*/
/*                              3-	EXTI_IOC                                                */
/*                              4-	EXTI_LOW_LEVEL                                          */
/********************************************************************************************/

#define EXTI0_Falling 	0
#define EXTI0_RISING 	1
#define EXTI0_IOC		2
#define EXTI0_LOW_LEVEL	3


#define EXTI0_SENSE_MODE		EXTI_Falling


#endif
