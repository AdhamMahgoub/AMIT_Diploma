#ifndef TIMER_CONFIG_H_
#define TIMER_CONFIG_H_

/*			Timer Modes					*/
#define NORMAL							0
#define CTC								1
#define FAST_PWM						2
#define PHASE_CORRECT					3

/*			Timer CLK Select			*/
#define falling_edge					0
#define rising_edge						1
#define no_prescalar 					2
#define prescalar_8						3
#define prescalar_64					4
#define prescalar_256					5
#define	prescalar_1024					6

/*			Compare Output Mode			*/
#define OC0_DISCONNECTED				0
#define TOGGLE_OC0						1
#define CLEAR_OC0						2
#define SET_OC0							3




/*		POSSILBE OPTIONS		*/
/*		TIMER0_MODE
 * 			NORMAL							0
 * 			PWM								1
 * 			PHASE_CORRECT					2
 * 			CTC								3
 * 			FAST_PWM						4
 * 		COMPARE_OUTPUT_MODE
 * 			OC0_DISCONNECTED				0
 * 			TOGGLE_OC0						1
 * 			CLEAR_OC0						2
 * 			SET_OC0							3
 * 		TIMER_CLK_SELECT
 * 			falling_edge					0
			rising_edge						1
			no_prescalar 					2
			prescalar_8						3
			prescalar_64					4
			prescalar_256					5
			prescalar_1024					6
 */


/*		User chooses from here		*/							/*		Possible Options 			*/
#define TIMER0_MODE						FAST_PWM				//		NORMAL, PWM, PHASE_CORRECT, CTC, FAST_PWM
#define COMPARE_OUTPUT_MODE										//		not used (using pwm "fast or phase"), disconnected, toggle, clear, set
#define TIMER_CLK_SELECT				prescalar_1024			//		falling_edge, rising_edge, prescalar
#define Duty_cycle						0.25
/*		End of user configuration	*/










#endif
